extends layout

block content
  .container
    .row
      h1= title
    .row
      p Welcome to #{title}
    .row
      button#btnCreate.button-primary Launch VM
      button#btnDelete Delete VM
      #dvStatus
        i.fa.fa-spinner.fa-pulse.fa-2x.fa-fw(rv-show="app.messageSpinner")
        { app.message }
    .row
      table#stackInfo.one-third.column
        thead
          tr
            th(colspan="2") Info:
        tbody
          tr
            td IP Address
            td { outputs.WorkstationIP }
          tr
            td Username
            td { outputs.Username }
          tr
            td Password
            td { outputs.Password }

  script(type='text/javascript', src='/javascripts/index.js')
